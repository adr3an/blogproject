<% layout('./layouts/boilerplate') %>



<div class="row mb-3">
    <div class="col-md-8">
        <% for (let blog of allBlogs.reverse()) {%>
        <div class="card mb-3 mt-5 ">




            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-inner">
                    <% blog.images.forEach((img, i)=>{ %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <a href="/blogs/<%= blog._id %>">
                            <img src="<%= img.url %>" class="d-block w-100" alt="...">
                        </a>
                    </div>
                    <% }) %>
                </div>
                <% if(blog.images.length > 1){ %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <% } %>
            </div>






            <div class="card-body">
                <h5 class="card-title">
                    <a class="text-primary text-decoration-none" href="/blogs/<%= blog._id %> ">
                        <%= blog.title %>
                    </a>
                </h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                    additional
                    content. This content is a little bit longer.
                </p>
                <% if(user){ %>

                <div class="d-flex">
                    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>

                    </form>
                    <a class="ml-2" href="/blogs/<%= blog._id %>/edit"> <button class="btn btn-primary">Edit</button>
                    </a>
                </div>
                <% } %>
                <p class="card-text"><small class="text-muted">Posted on: <%= blog.date %> </small></p>
            </div>

        </div>
        <% } %>
    </div>

